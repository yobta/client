{
  "name": "@yobta/client",
  "version": "0.0.1",
  "description": "API client with offline support",
  "keywords": [
    "experiment"
  ],
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "lint": "eslint src",
    "size-limit": "size-limit",
    "test": "vitest src --coverage --run",
    "test:watch": "vitest src --coverage",
    "typecheck": "tsc --noEmit"
  },
  "author": "Sergei Droganov <sergei@droganov.ru>",
  "license": "MIT",
  "repository": "yobta/stores",
  "sideEffects": false,
  "type": "module",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@logux/eslint-config": "^45.4.8",
    "@size-limit/preset-small-lib": "^8.1.0",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "^28.1.8",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^16.11.65",
    "@types/react": "^17.0.50",
    "@types/react-dom": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "c8": "^7.12.0",
    "check-dts": "^0.5.6",
    "clean-publish": "^2.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-unicorn": "36.0.0",
    "eslint-plugin-vitest-globals": "^1.2.0",
    "happy-dom": "^5.4.0",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^8.1.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vitest": "^0.14.2"
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "extends": [
      "plugin:vitest-globals/recommended",
      "@logux/eslint-config/esm"
    ],
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "vitest-globals/env": true
        }
      }
    ],
    "rules": {
      "@typescript-eslint/unified-signatures": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "symbol-description": "off",
      "consistent-return": "off",
      "jest/no-deprecated-functions": "off",
      "camelcase": "off"
    },
    "globals": {
      "jsdom": false
    }
  },
  "eslintIgnore": [
    "**/errors.ts",
    "vitest.config.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "size-limit": [
    {
      "name": "All",
      "path": "./lib/index.js",
      "limit": "668 B"
    },
    {
      "path": "./lib/internetConnectionYobta/internetConnectionYobta.js",
      "import": "{ internetConnectionYobta }",
      "limit": "381 B"
    },
    {
      "path": "./lib/websocketYobta/websocketYobta.js",
      "import": "{ websocketYobta }",
      "limit": "566 B"
    }
  ],
  "dependencies": {
    "@yobta/stores": "^0.0.23"
  }
}
