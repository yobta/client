{
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2019",
    "types": ["vitest/globals"],
    "paths": {
      "@yobta/*": ["./@yobta/*/src"]
    }
  },
  "exclude": ["**/lib", "**/*.test_disabled.*", "node_modules"]
}
